# MongoDB Connection (adjust if running Docker with custom network/ports)
MONGODB_URI=mongodb://localhost:27017/lamp-monitor

# JWT Secret for signing/verifying tokens
JWT_SECRET=your_super_secret_key_here

# Token expiration time (optional but recommended)
JWT_EXPIRES_IN=7d

# ESP32 API Secret (optional, if you want to restrict which clients can POST)
DEVICE_SECRET=optional_device_shared_key

# Optional: Used for frontend or CORS policies
NEXT_PUBLIC_API_URL=http://localhost:3000
